= form_for [@imageable, @image] do |f|
  - if @image.errors.any?
    #error_explanation
      h2 = pluralize(@image.errors.count, "error")
        | prohibited this image from being saved:
      ul
        - @image.errors.full_messages.each do |msg|
          li = msg
  .field = f.file_field :source
  .actions = f.submit
